{
	"name": "mirarus/bmvc-core",
	"description": "Mirarus BMVC Core (Basic MVC Core)",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Ali Güçlü",
			"email": "aliguclutr@gmail.com"
		}
	],
	"require": {
		"php": "^7.3 || ^8.0",
		"ext-json": "*",
		"ext-pdo": "*",
		"ext-mbstring": "*",
		"ext-intl" : "*",
		"filp/whoops": "^2.12",
		"jenssegers/blade": "^1.4",
		"monolog/monolog": "^2.2",
		"vlucas/phpdotenv": "^5.3",
		"symfony/console": "^5.2"
	},
	"bin": ["bin/bmvc"],
	"autoload": {
		"psr-4": {
			"BMVC\\": "src"
		},
		"files": [
			"src/helper.php"
		]
	},
	"scripts": {
		"remove-git-dir" : "find . -mindepth 2 -type d -name .git | xargs rm -rf",
		"pre-install-cmd": ["@remove-git-dir"],
		"pre-update-cmd": ["@remove-git-dir"],
		"post-install-cmd": ["@remove-git-dir"],
		"post-update-cmd": ["@remove-git-dir"]
	}
}
