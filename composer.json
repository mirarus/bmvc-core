{
	"name": "mirarus/bmvc-core",
	"description": "Mirarus BMVC Core (Basic MVC Core)",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Ali Güçlü",
			"email": "aliguclutr@gmail.com"
		}
	],
	"require": {
		"php": "^7.3 || ^8.0",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-intl" : "*",
		"ext-gettext": "*",
		"mirarus/bmvc-libs": "0.*"
	},
	"autoload": {
		"psr-4": {
			"BMVC\\": "src"
		},
		"files": [
			"src/helper.php"
		]
	},
	"config": {
		"preferred-install": "dist",
		"sort-packages": true,
		"optimize-autoloader": true
	}
}
