{
	"name": "mirarus/bmvc-core",
	"description": "Mirarus BMVC Core (Basic MVC Core)",
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "Ali Güçlü",
			"email": "aliguclutr@gmail.com"
		}
	],
	"require": {
		"php": ">=7.3",
		"ext-json": "*",
		"ext-pdo": "*",
		"ext-mbstring": "*",
		"ext-intl" : "*",
		"filp/whoops": "^2.12",
		"jenssegers/blade": "^1.4",
		"monolog/monolog": "^2.2",
		"vlucas/phpdotenv": "^5.3",
		"symfony/console": "^5.2"
	},
	"scripts": {
		"post-install-cmd": [
			"@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
		],
		"post-root-package-install": [
			"@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
		]
	},
	"autoload": {
		"psr-4": {
			"BMVC\\": ".",
			"BMVC\\Libs\\": "Libraries"
		},
		"files": [
			"helper.php"
		]
	}
}
